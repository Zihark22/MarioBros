{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++17",
                "-stdlib=libc++",
                "-g",
                "main.cpp",
                "fonctions.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lallegro",
                "-lallegro_main",
                "-lallegro_primitives",
                "-lallegro_font",
                "-lallegro_image",
                "-lallegro_color",
                "-lallegro_ttf",
                "-lallegro_dialog",
                "-lallegro_audio",
                "-lallegro_acodec",
                "-lallegro_video"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ]
}